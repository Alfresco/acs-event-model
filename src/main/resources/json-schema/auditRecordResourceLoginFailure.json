{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "type": "object",
  "properties": {
    "specversion": { "type": "string" },
    "type": { "type": "string" },
    "id": { "type": "string" },
    "source": { "type": ["string", "null"] },
    "time": { "type": "string", "format": "date-time" },
    "dataschema": { "type": "string" },
    "datacontenttype": { "type": "string" },
    "data": {
      "type": "object",
      "properties": {
        "eventGroupId": { "type": ["string", "null"] },
        "resource": {
          "type": "object",
          "properties": {
            "@type": { "type": "string" },
            "auditApplicationId": { "type": "string" },
            "auditData": {
              "type": "object",
              "properties": {
                "loginFailure": {
                  "type": "object",
                  "properties": {
                    "user": { "type": "string" }
                  },
                  "required": ["user"]
                }
              },
              "required": ["loginFailure"]
            },
            "createdByUser": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },
                "displayName": { "type": "string" }
              },
              "required": ["id", "displayName"]
            },
            "createdAt": { "type": "string", "format": "date-time" },
            "modifiedByUser": {
              "type": "object",
              "properties": {
                "id": { "type": "string" },
                "displayName": { "type": "string" }
              },
              "required": ["id", "displayName"]
            },
            "modifiedAt": { "type": "string", "format": "date-time" },
            "aspectNames": {
              "type": "array",
              "items": { "type": "string" }
            },
            "properties": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "propertyName": { "type": "string" },
                  "value": { "type": ["string", "boolean", "null"] },
                  "locale": { "type": ["string", "null"] }
                },
                "required": ["propertyName", "value"]
              }
            },
            "changes": {
              "type": "array",
              "items": { "type": "object" }
            },
            "isFile": { "type": "boolean" },
            "isFolder": { "type": "boolean" }
          },
          "required": [
            "@type",
            "auditApplicationId",
            "auditData",
            "createdByUser",
            "createdAt",
            "modifiedByUser",
            "modifiedAt",
            "aspectNames",
            "properties",
            "changes",
            "isFile",
            "isFolder"
          ]
        }
      },
      "required": ["eventGroupId", "resource"]
    }
  },
  "required": [
    "specversion",
    "type",
    "id",
    "source",
    "time",
    "dataschema",
    "datacontenttype",
    "data"
  ]
}